#include<iostream>
using namespace std;
int main()
{
    int t;
    cout<<"enter test cases: ";
    cin>>t;
    
    for(int i=1; i<=t; i++)
    {
        int A,B,C;
        cin>>A>>B>>C;
        
        if(A+C>=B)
        {
            cout<<A+C<<endl;
        }else
        {
            cout<<B<<endl;
        }
    }
    return 0;
}
