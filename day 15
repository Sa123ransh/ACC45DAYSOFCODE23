#include <iostream>
using namespace std;

int main() {
        
        int T;
        cin>>T;
        
        for(int i=0; i<T; i++)
        {
            int N,X;
            cin>>N>>X;
            
            if(N==X)
            {
                cout<<0<<endl;
            }
            else if(N-X>=X)
            {
                cout<<X<<endl;
            }
            else if(N-X<=X)
            {
                cout<<N-X<<endl;
            }
        }
	return 0;
}

