#include<iostream>
using namespace std;
int main()
{
    int T;
    cin>>T;
    
    for(int i=0; i<T; i++)
    {
        int N,M;
        cin>>N>>M;
        
        if(N%M==0 && N%2==0)
        {
            cout<<"YES"<<endl;
        
        }else 
        {
        cout<<"NO"<<endl;
        }
    }
    
    return 0;
    
}
   
 
